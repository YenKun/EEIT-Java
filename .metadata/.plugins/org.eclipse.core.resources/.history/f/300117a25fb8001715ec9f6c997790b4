package oopMethod;

class person {
	String gender;
	String name;
	int age;
	void sayHello() {
		System.out.println("Hello!!");
	}
	person(String gender,String name,int age){
		this.gender = gender;
		this.name = name;
		this.age = age;
	}
}

public class testCallMethodEx1 {

	public static void main(String[] args) {
		person mike = new person("male","mike",24);
		System.out.printf("%s¬O%d·³%s",mike.name,mike.age,mike.gender);
		mike.sayHello();

	}

}
