package practiceHomework;

public class practiceIfElseHw1 {

	public static void main(String[] args) {
		/*
		 * 求二元一次方程式的實根
		 */
		int a = 1;//(int) (Math.random() * 10 + 1);
		int b = 2;//(int) (Math.random() * 10 + 1);
		int c = 1;//(int) (Math.random() * 10 + 1);

		int D = b * b - 4 * a * c;
		double Dsqr = Math.sqrt(D);

		if (D < 0) {
			System.out.printf("%dx^2+%dx+%d\n沒有實根\n", a, b, c);
		} else if (D == 0) {
			System.out.printf("%dx^2+%dx+%d\n有重根%.2f\n", a, b, c, (double) (~b + 1) / (2 * a));
		} else {
			System.out.printf("%dx^2+%dx+%d\n有兩相異實根%.2f,%.2f\n", a, b, c, (double) (~b + 1) + Dsqr / (2 * a),
					(double) (~b + 1) - Dsqr / (2 * a));
		}

	}

}
