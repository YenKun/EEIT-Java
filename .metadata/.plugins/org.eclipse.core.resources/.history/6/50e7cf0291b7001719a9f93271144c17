package tw.yenkun.myproject.conditional;

public class TestIfElseIfHw {

	public static void main(String[] args) {
		int year = (int)(Math.random()*3000);
		if(year%4==0) {
			if(year%100==0) {
				if(year%400==0) {
					if(year%4000==0) {
						System.out.println(year + "不是閏年");
					}else {
						System.out.println(year + "是閏年");
					}
				}else {
					System.out.println(year + "不是閏年");
				}
			}else {
				System.out.println(year + "是閏年");
			}
		}else {
			System.out.println(year + "不是閏年");
		}
		
		
		int year2 = (int)(Math.random()*3000);
		if (((year2%4 == 0)&&(year2%100 !=0))||(year2%400 ==0)) {
			System.out.println("西元" + year2 + "是閏年");
		}else {
			System.out.println("西元" + year2 + "不是閏年");
		}
		
		
		
		
		int index = (int)(Math.random()*2+1);
		int degree = (int)(Math.random()*100-50);
		double k = 9/5.0;
		if (index==1) {
			System.out.println("index=" + index + "\n攝氏溫度" + degree + "=華氏溫度" + (degree*k+32));
		}else if(index==2) {
			System.out.println("index=" + index + "\n華氏溫度" + degree + "=攝氏溫度" + ((degree-32)/k));
		}

	}

}
