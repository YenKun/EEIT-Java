package tw.yenkun.myproject.conditional;

public class IfNestEx1 {
	public static void main(String[] args) {
		int value = (int) (Math.random() * 200 - 100);
		if (value > 0 && value % 2 == 0) {
			System.out.println("value=" + value + "為正偶數");
		} else if (value < 0 && value % 2 == 0) {
			System.out.println("value=" + value + "為負偶數");
		} else if (value > 0 && value % 2 != 0) {
			System.out.println("value=" + value + "為正奇數");
		} else if (value < 0 && value % 2 != 0) {
			System.out.println("value=" + value + "為負奇數");
		} else {
			System.out.println("value值為" + value);
		}
	}

}
