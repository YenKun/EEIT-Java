package practiceQuiz;

public class quizEx15 {

	public static void main(String[] args) {

		int[][] chess = new int[8][8];

		int X = 3;
		int Y = 3;
		chess[X][Y] = 1;

	

				int moveX = (int) (Math.random() * 2 + 1);
				int moveY;
				if (moveX == 2) {
					moveY = moveX - 1;
				} else {
					moveY = moveX + 1;
				}

				int coin = (int) (Math.random() * 2);
				if (coin == 0) {
					moveX = -(moveX);
				}
				coin = (int) (Math.random() * 2);
				if (coin == 0) {
					moveY = -(moveY);
				}

	
				


		for (int a[] : chess) {
			for (int b : a) {
				System.out.printf("%2d ", b);
			}
			System.out.println();
		}

	}
}
