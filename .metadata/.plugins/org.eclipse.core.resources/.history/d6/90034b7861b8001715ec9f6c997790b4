package oopMethod;

/*
 * Method
 * [modifier] return_type identifier([parameter_lists]){
 * statement;
 * [return value;]
 * }
 */

class person {
	String gender;
	String name;
	int age;

	void sayHello() {
		System.out.println("Hello!!");
	}

	person(String gender, String name, int age) {
		this.gender = gender;
		this.name = name;
		this.age = age;
	}
}

public class testCallMethodEx1 {

	public static void main(String[] args) {
		person mike = new person("¨k©Ê", "mike", 24);
		System.out.printf("%s¬O%d·³%s\n", mike.name, mike.age, mike.gender);
		mike.sayHello();

	}

}
