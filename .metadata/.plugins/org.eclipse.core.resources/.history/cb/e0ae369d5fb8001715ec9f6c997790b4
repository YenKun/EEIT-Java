package oopMethod;

class person {
	String gender;
	int age;
	void sayHello() {
		System.out.println("Hello!!");
	}
	person(String gender,int age){
		this.gender = gender;
		this.age = age;
	}
}

public class testCallMethodEx1 {

	public static void main(String[] args) {
		person mike = new person("male",24);
		System.out.println(mike.gender + mike.age);
		mike.sayHello();

	}

}
