package practiceQuiz;

public class quizEx15 {

	public static void main(String[] args) {
		int n = 4;
		String[][] array = new String[n][2 * n - 1];

		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array[i].length; j++) {

				if (j > n - 1 - i && j < n - 1 + i) {
					if (j == n + i || j == n - i || i == 0) {
						array[i][j] = "1";
					} else {

						array[i][j] = String.toString(Integer.parseInt(array[i - 1][j - 1]) + Integer.parseInt(array[i - 1][j + 1]));
					}
				} else {
					array[i][j] = " ";
				}
			}
		}

		for (String a[] : array) {
			for (String b : a) {
				System.out.print(b);

			}
		}

	}
}
