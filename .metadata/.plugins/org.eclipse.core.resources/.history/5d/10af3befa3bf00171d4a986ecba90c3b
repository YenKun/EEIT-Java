package oop.io;

class maze {
	private int x = 0;
	private int y = 0;

	public void move(int x, int y) {
		synchronized (this) {
			this.x = x;
			this.y = y;
			this.notify();
		}
	}

	public void check() {
		synchronized (this) {
			try {
				this.wait();

				if (x == 0 && y == 0) {
					System.exit(-1);
				}
			} catch (InterruptedException e) {
				e.printStackTrace();
			}

		}
	}
}

public class testSyncronizedEx1 {

	public static void main(String[] args) {

	}

}
